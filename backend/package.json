{
  "name": "webservices-budget",
  "version": "1.0.0",
  
  "description": "Demo application for the course Web Services.",
  "main": "src/index.js",
  "repository": "git@github.com:HOGENT-Web/webservices-budget.git",
  "author": "Thomas Aelbrecht <thomasaelbrecht@live.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "env-cmd nodemon",
    "start:dev": "tsx watch --env-file .env --inspect=0.0.0.0:9001 src/index.js",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "argon2": "^0.31.2",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "mysql2": "^3.6.3",
    "node-emoji": "1.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  }
}
